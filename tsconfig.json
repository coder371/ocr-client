{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@theme/*": ["src/theme/*"],
      "@common/*": ["src/common/*"],
      "@i18n/*": ["src/i18n/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@graphql/*": ["src/graphql/*"],
      "@config/*": ["src/config/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@router/*": ["src/router/*"],
      "@redux/*": ["src/redux/*"],
      "@providers/*": ["src/providers/*"],
      "@utils/*": ["src/utils/*"],
    }
  }
}
